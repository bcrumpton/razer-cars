<div class="container">
  <div class="panel panel-default">
    <form {{action "editManufacturer" model on="submit"}}>
      <div class="panel-heading">
        <h4>Edit Manufacturer</h4>
      </div>
      <div class="panel-body">
        <div class="form-group">
          {{input type="text" value=model.name class="form-control edit" placeholder="Company Name"}}
        </div>
        <div class="form-group">
          {{input type="text" value=model.country class="form-control edit" placeholder="ISO Country Code"}}
        </div>
      </div>
      <div class="panel-footer">
        {{#link-to 'manufacturer.index' class="btn btn-info"}}Back{{/link-to}}
        <button type="submit" class="btn btn-warning">Submit</button>
      </div>
    </form>
  </div>
</div>
