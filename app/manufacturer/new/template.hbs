{{outlet}}

<div class="container">
  <div class="panel panel-default">
    <form {{action "saveManufacturer" on="submit"}}>
      <div class="panel-heading">
        <h4>Add New Manufacturer</h4>
      </div>
      <div class="panel-body">
        <div class="form-group">
          {{input type="name" value=formValues.name class="form-control" placeholder="Company Name"}}
        </div>
        <div class="form-group">
          {{input type="" value=formValues.country class="form-control" placeholder="ISO Country Code"}}
        </div>
      </div>
      <div class="panel-footer">
        {{#link-to 'manufacturer.index' class="btn btn-info"}}Back{{/link-to}}
        <button type="submit" class="btn btn-warning">Submit</button>
      </div>
    </form>
  </div>
</div>
